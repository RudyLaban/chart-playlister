{% extends 'base.html.twig' %}

{% block title %}Hello PlaylistController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ 'C:/wamp64/www/chart-playlister/src/Controller/PlaylistController.php'|file_link(0) }}">src/Controller/PlaylistController.php</a></code></li>
        <li>Your template at <code><a href="{{ 'C:/wamp64/www/chart-playlister/templates/playlist/index.html.twig'|file_link(0) }}">templates/playlist/index.html.twig</a></code></li>
    </ul>

    <h4 style="background: orange;">Nombre de morceau n'ayant pas été trouvé dans Spotify : {{ count }}</h4>

    {% for key, item in artists %}
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th colspan="3">{{ key }}</th>
                </tr>
            </thead>

            <tbody>
                {% for element in item %}
                    <tr>
                        <td>{{ element.name }}</td>
                        <td>{{ element.id }}</td>
                        <td><a href="{{ element.external_urls.spotify }}" target="_blank">Lien</a></td>
                    </tr>
                    {% if loop.last %}
                        {% for artist in element.artists %}
                            <tr class=>
                                <td>{{ artist.name }}</td>
                                <td>{{ artist.id }}</td>
                                <td><a href="{{ artist.external_urls.spotify }}">Lien</a></td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                {% endfor %}
            </tbody>

        </table>
    {% endfor %}
</div>
{% endblock %}
