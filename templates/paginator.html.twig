{# template custom de pagination #}
{% if pageCount > 1 %}
    <div class="row page_nav_row">
        <div class="col">
            <div class="page_nav d-flex flex-row align-items-center justify-content-center">
                <ul class="d-flex flex-row">
                    {% if first is defined and current != first %}
                    <li>
                        <a href="{{ path(route, query|merge({(pageParameterName): first})) }}">
                            <i class="fa fa-angle-double-left" aria-hidden="true"></i>
                        </a>
                    </li>
                    {% endif %}

                    {% if previous is defined %}
                    <li>
                        <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                            <i class="fa fa-angle-left" aria-hidden="true"></i>
                        </a>
                    </li>
                    {% endif %}

                    {% for page in pagesInRange %}
                        {% if page != current %}
                            <li>
                                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                            </li>
                        {% else %}
                            <li class="active"><a>{{ page }}</a></li>
                        {% endif %}
                    {% endfor %}

                    {% if next is defined %}
                        <li>
                            <a href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                                <i class="fa fa-angle-right" aria-hidden="true"></i>
                            </a>
                        </li>
                    {% endif %}

                    {% if last is defined and current != last %}
                        <li>
                            <a href="{{ path(route, query|merge({(pageParameterName): last})) }}">
                                <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>

{% endif %}